CPPFLAGS = -Wall -Wextra -Werror

SRCS = bsp.cpp Fixed.cpp Point.cpp

NAME = bsp

all:
	g++ $(CPPFLAGS) $(SRCS) -o $(NAME)
	
clean:
	rm $(NAME)