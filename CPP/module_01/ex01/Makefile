CPPFLAGS = -Wall -Wextra -Werror

SRCS = main.cpp ZombieHorde.cpp Zombie.cpp

NAME = moarBrainz

all:
	c++ $(CPPFLAGS) $(SRCS) -o $(NAME)
	
clean:
	rm $(NAME)
